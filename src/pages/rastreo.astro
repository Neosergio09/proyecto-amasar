---
import MainLayout from '../layouts/MainLayout.astro';
import { supabase } from '../lib/supabase';

// 1. VITAL: Forzar que la p√°gina sea din√°mica
// Sin esto, Astro no puede leer los par√°metros de la URL en tiempo real
export const prerender = false;

let pedido = null;
let errorBusqueda = null;

// 2. L√≥gica de b√∫squeda mejorada
// Limpiamos espacios y estandarizamos a may√∫sculas
const tag = Astro.url.searchParams.get('tag')?.toUpperCase().trim();

if (tag) {
  const { data, error } = await supabase
    .from('pedidos')
    .select('*')
    .eq('tag_rastreo', tag)
    .single();

  if (error) {
    // Si hay un error t√©cnico (como falta de permisos RLS), lo vemos en la consola del servidor
    console.error("Error en consulta Supabase:", error.message);
    errorBusqueda = "No encontramos ning√∫n pedido con ese c√≥digo. Verifica que est√© bien escrito.";
  } else {
    pedido = data;
  }
}

// 3. Mapeo de estados con insensibilidad a may√∫sculas
// Esto evita que "En horno" falle si en la DB dice "En Horno"
const estados = ["Preparaci√≥n", "En horno", "Empacado", "En camino", "Entregado"];

const indiceEstado = pedido 
  ? estados.findIndex(e => e.toLowerCase() === pedido.estado.toLowerCase()) 
  : -1;

const porcentajeProgreso = indiceEstado === -1 ? 0 : ((indiceEstado + 1) / estados.length) * 100;

const title = "Rastreo de Pedidos | Amasar";
const description = "Consulta el estado real de tu pedido mayorista en Bogot√°.";
---

<MainLayout title={title} description={description}>
  <section class="bg-background min-h-[80vh] py-24">
    <div class="max-w-3xl mx-auto px-6">
      
      <div class="text-center mb-16">
        <h1 class="text-5xl font-serif text-secondary mb-4">Rastrea tu <span class="text-primary italic">Pedido</span></h1>
        <p class="text-slate-500">Ingresa el c√≥digo √∫nico asignado a tu despacho.</p>
      </div>

      <form action="/rastreo" method="GET" class="relative mb-16">
        <input 
          type="text" 
          name="tag" 
          value={tag || ''}
          placeholder="Ej: AM-2026-001" 
          class="w-full p-6 pr-40 rounded-3xl border-2 border-primary/10 bg-white focus:border-primary outline-none text-xl font-bold transition-all shadow-sm"
          required
        />
        <button 
          type="submit" 
          class="absolute right-3 top-3 bottom-3 bg-secondary text-white px-8 rounded-2xl font-bold text-xs uppercase tracking-widest hover:bg-primary transition-all shadow-lg active:scale-95"
        >
          Consultar
        </button>
      </form>

      {pedido && (
        <div class="bg-white rounded-[3rem] p-10 md:p-16 shadow-2xl border border-primary/5 animate-fade-in">
          
          <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 gap-6">
            <div>
              <p class="text-[10px] uppercase tracking-[0.2em] text-slate-400 font-black mb-2">Estado Actual</p>
              <h2 class="text-4xl font-serif text-secondary">{pedido.estado}</h2>
              <p class="text-sm text-slate-400 mt-2">Cliente: <span class="font-bold text-secondary">{pedido.cliente_nombre}</span></p>
            </div>
            <div class="bg-primary/10 px-6 py-3 rounded-2xl border border-primary/10">
              <p class="text-primary font-bold text-sm">Tag: {pedido.tag_rastreo}</p>
            </div>
          </div>

          <div class="relative pt-1">
            <div class="flex mb-6 items-center justify-between">
              <div>
                <span class="text-[10px] font-black inline-block py-2 px-4 uppercase rounded-full text-primary bg-primary/10 tracking-widest">
                  Log√≠stica en curso
                </span>
              </div>
              <div class="text-right">
                <span class="text-sm font-black text-primary">
                  {Math.round(porcentajeProgreso)}%
                </span>
              </div>
            </div>
            
            <div class="overflow-hidden h-4 mb-4 text-xs flex rounded-full bg-slate-100 p-1">
              <div 
                style={`width: ${porcentajeProgreso}%`} 
                class="shadow-lg flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary rounded-full transition-all duration-1000 ease-out"
              ></div>
            </div>
          </div>

          <div class="mt-16 grid grid-cols-2 md:grid-cols-5 gap-6">
            {estados.map((est, index) => (
              <div class={`text-center transition-all duration-500 ${index <= indiceEstado ? 'opacity-100' : 'opacity-20'}`}>
                <div class={`w-4 h-4 mx-auto rounded-full mb-3 border-4 border-white shadow-sm ${index <= indiceEstado ? 'bg-primary ring-4 ring-primary/20' : 'bg-slate-300'}`}></div>
                <p class="text-[10px] uppercase font-black tracking-tighter leading-tight">{est}</p>
              </div>
            ))}
          </div>

        </div>
      )}

      {errorBusqueda && (
        <div class="bg-red-50 text-red-600 p-10 rounded-[2.5rem] text-center border border-red-100 animate-shake">
          <span class="text-4xl block mb-4">üîç</span>
          <p class="font-bold text-lg">{errorBusqueda}</p>
          <p class="text-sm opacity-70 mt-2">Si el problema persiste, contacta a tu asesor comercial.</p>
        </div>
      )}

    </div>
  </section>
</MainLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
  }

  .animate-fade-in {
    animation: fade-in 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-shake {
    animation: shake 0.4s ease-in-out;
  }
</style>