---
import MainLayout from '../layouts/MainLayout.astro';
import { supabase } from '../lib/supabase';

export const prerender = false;

let pedido = null;
let errorBusqueda = null;

const tag = Astro.url.searchParams.get('tag')?.toUpperCase().trim();

if (tag) {
  const { data, error } = await supabase
    .from('pedidos')
    .select('*')
    .eq('tag_rastreo', tag)
    .single();

  if (error) {
    errorBusqueda = "No encontramos esa orden. Revisa el c√≥digo que te enviamos por WhatsApp.";
  } else {
    pedido = data;
  }
}

// Estados con Iconos para una mejor experiencia de usuario (B2B y B2C)
const estados = [
  { nombre: "Preparaci√≥n", icono: "ü•£" },
  { nombre: "En horno", icono: "üî•" },
  { nombre: "Empacado", icono: "üéÅ" },
  { nombre: "En camino", icono: "üöö" },
  { nombre: "Entregado", icono: "‚ú®" }
];

const indiceEstado = pedido 
  ? estados.findIndex(e => e.nombre.toLowerCase() === pedido.estado.toLowerCase()) 
  : -1;

const porcentajeProgreso = indiceEstado === -1 ? 0 : ((indiceEstado + 1) / estados.length) * 100;

const title = "Sigue tu Pedido | Amasar";
const description = "Sigue el progreso de tu orden de galletas, caf√© o eventos en Bogot√° en tiempo real.";
---

<MainLayout title={title} description={description}>
  <section class="bg-background min-h-[80vh] py-24">
    <div class="max-w-3xl mx-auto px-6">
      
      <div class="text-center mb-12">
        <h1 class="text-5xl md:text-6xl font-serif text-secondary mb-4">Sigue la <span class="text-primary italic">Magia</span></h1>
        <p class="text-slate-500 max-w-md mx-auto leading-relaxed">
          Ingresa el c√≥digo que recibiste al confirmar tu pedido para ver en qu√© etapa se encuentra.
        </p>
      </div>

      <form action="/rastreo" method="GET" class="relative mb-16">
        <input 
          type="text" 
          name="tag" 
          value={tag || ''}
          placeholder="Ej: AM-2026-8812" 
          class="w-full p-8 pr-44 rounded-full border-none bg-white focus:ring-4 focus:ring-primary/20 outline-none text-xl font-bold transition-all shadow-xl shadow-secondary/5"
          required
        />
        <button 
          type="submit" 
          class="absolute right-3 top-3 bottom-3 bg-secondary text-white px-10 rounded-full font-black uppercase text-[10px] tracking-widest hover:bg-primary transition-all active:scale-95"
        >
          Rastrear
        </button>
      </form>

      {pedido ? (
        <div class="bg-white rounded-[4rem] p-10 md:p-16 shadow-2xl border border-primary/5 animate-fade-in relative overflow-hidden">
          
          <div class="absolute top-0 right-0 p-8 opacity-5 text-8xl pointer-events-none">üç™</div>

          <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-12 gap-6 relative z-10">
            <div>
              <p class="text-[10px] uppercase tracking-[0.3em] text-primary font-black mb-2">Orden en curso</p>
              <h2 class="text-4xl font-serif text-secondary">
                {indiceEstado === 1 ? "¬°Ya est√° en el horno!" : pedido.estado}
              </h2>
              <p class="text-sm text-slate-400 mt-2">Para: <span class="font-bold text-secondary">{pedido.cliente_nombre}</span></p>
            </div>
            <div class="bg-slate-50 px-6 py-4 rounded-3xl border border-slate-100">
              <p class="text-[10px] uppercase font-black text-slate-400 mb-1">C√≥digo de Rastreo</p>
              <p class="text-secondary font-mono font-bold">{pedido.tag_rastreo}</p>
            </div>
          </div>

          <div class="relative pt-1 mb-20">
            <div class="flex mb-6 items-center justify-between">
              <div>
                <span class="text-[10px] font-black inline-block py-2 px-4 uppercase rounded-full text-white bg-secondary tracking-widest shadow-lg shadow-secondary/20">
                  {Math.round(porcentajeProgreso)}% completado
                </span>
              </div>
            </div>
            
            <div class="overflow-hidden h-6 mb-4 flex rounded-full bg-slate-100 p-1.5 border border-slate-50">
              <div 
                style={`width: ${porcentajeProgreso}%`} 
                class="shadow-inner flex flex-col text-center whitespace-nowrap text-white justify-center bg-primary rounded-full transition-all duration-1000 ease-out relative"
              >
                <div class="absolute right-0 w-8 h-8 bg-white rounded-full shadow-md scale-125 border-4 border-primary"></div>
              </div>
            </div>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
            {estados.map((est, index) => (
              <div class={`text-center transition-all duration-700 ${index <= indiceEstado ? 'scale-100 opacity-100' : 'scale-90 opacity-20 grayscale'}`}>
                <div class={`w-14 h-14 mx-auto rounded-3xl mb-4 flex items-center justify-center text-2xl shadow-sm border-2 ${index <= indiceEstado ? 'bg-white border-primary' : 'bg-slate-50 border-slate-100'}`}>
                  {est.icono}
                </div>
                <p class="text-[10px] uppercase font-black tracking-tighter leading-tight text-secondary">{est.nombre}</p>
              </div>
            ))}
          </div>

          <div class="mt-16 pt-10 border-t border-slate-50 text-center">
             <p class="text-xs text-slate-400 italic">¬øTienes dudas con tu pedido? <a href="/contacto" class="text-primary font-bold hover:underline">Escr√≠benos por WhatsApp</a></p>
          </div>

        </div>
      ) : (
        !errorBusqueda && (
            <div class="text-center p-12 bg-white/50 rounded-[3rem] border border-dashed border-slate-200">
                <p class="text-slate-400 text-sm">El c√≥digo lo puedes encontrar en el mensaje de confirmaci√≥n que enviamos a tu WhatsApp.</p>
            </div>
        )
      )}

      {errorBusqueda && (
        <div class="bg-white p-12 rounded-[3rem] text-center shadow-xl border-b-4 border-red-400 animate-shake">
          <span class="text-5xl block mb-6">üîç</span>
          <h3 class="text-xl font-serif text-secondary mb-2">¬°Ups! No lo encontramos</h3>
          <p class="text-slate-500 text-sm mb-6">{errorBusqueda}</p>
          <a href="/rastreo" class="text-primary font-black uppercase text-[10px] tracking-widest border-b-2 border-primary pb-1">Intentar de nuevo</a>
        </div>
      )}

    </div>
  </section>
</MainLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-8px); }
    75% { transform: translateX(8px); }
  }

  .animate-fade-in {
    animation: fade-in 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-shake {
    animation: shake 0.5s ease-in-out;
  }
</style>