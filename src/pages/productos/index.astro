---
import MainLayout from '../../layouts/MainLayout.astro';
import { supabase, getOptimizedImage } from '../../lib/supabase';

// 1. Obtenemos los productos (Solo los campos necesarios para aligerar la consulta)
const { data: productos } = await supabase
  .from('productos')
  .select('nombre, imagen_url, categoria, descripcion, precio')
  .order('categoria', { ascending: true });

const categorias = [...new Set(productos?.map(p => p.categoria))];

const slugify = (text: string) => {
  return text.toString().toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "").trim().replace(/\s+/g, "-").replace(/[^\w-]+/g, "");
};

const title = "Catálogo Completo de Suministros | Amasar";
const description = "Explora toda la variedad de Amasar: Galletas artesanales, café premium y más.";
---

<MainLayout title={title} description={description}>
  <link rel="preconnect" href="https://dryeeosrkteamqwnfsqo.supabase.co" crossorigin slot="head" />
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=Playfair+Display:ital,wght@0,400;0,900;1,400&display=swap" as="style" slot="head" />

  <section class="bg-background min-h-screen py-24">
    <div class="max-w-7xl mx-auto px-6">
      
      <div class="mb-16">
        <nav class="flex text-[10px] uppercase tracking-[0.2em] text-slate-600 mb-8 gap-2">
          <a href="/" class="hover:text-primary transition-colors">Inicio</a>
          <span>/</span>
          <span class="text-secondary font-bold">Productos</span>
        </nav>
        <h1 class="text-6xl font-serif text-secondary mb-6 min-h-[1.2em]">
          Nuestra <span class="text-primary italic">Despensa</span>
        </h1>
      </div>

      <div class="flex flex-wrap gap-4 mb-20">
        {categorias.map(cat => (
          <a href={`/productos/${slugify(cat)}`} class="group flex items-center gap-3 px-8 py-4 bg-white rounded-2xl border border-primary/10 hover:border-primary transition-all">
            <span class="font-bold text-xs uppercase tracking-widest text-secondary group-hover:text-primary">{cat}</span>
          </a>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        {productos?.map((prod, index) => (
          <div class="group bg-white rounded-[2.5rem] overflow-hidden border border-slate-100 hover:shadow-2xl transition-all duration-500">
            
            <div class="block aspect-square overflow-hidden bg-slate-100 relative">
              <img 
                src={`${prod.imagen_url}?width=300&quality=50&format=avif`} 
                alt={prod.nombre}
                width="300"
                height="300"
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                loading={index < 2 ? "eager" : "lazy"}
                decoding="async"
                fetchpriority={index === 0 ? "high" : "auto"}
              />
              <div class="absolute top-6 right-6">
                 <span class="bg-secondary text-white px-4 py-1 rounded-full text-[9px] font-black uppercase tracking-widest">
                   {prod.categoria}
                 </span>
              </div>
            </div>

            <div class="p-10">
              <h2 class="text-2xl font-bold text-secondary mb-3">{prod.nombre}</h2>
              <p class="text-slate-700 text-sm leading-relaxed mb-8 line-clamp-2">
                {prod.descripcion || "Insumo premium seleccionado para Amasar."}
              </p>
              
              <div class="flex items-center justify-between border-t border-slate-100 pt-8">
                <p class="text-2xl font-black text-primary">{prod.precio}</p>
                <button class="bg-background text-secondary p-4 rounded-2xl hover:bg-primary hover:text-white transition-all">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>