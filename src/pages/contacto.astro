          <button id="btnReset" class="text-primary font-black text-[10px] uppercase tracking-[0.2em] border-b-2 border-primary pb-1 hover:text-secondary hover:border-secondary transition-all">
            Enviar otro mensaje
          </button>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  import { supabase } from '../lib/supabase';

  function setupForm() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const successMessage = document.getElementById('successMessage');
    const btnReset = document.getElementById('btnReset');
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    const btnText = document.getElementById('btnText');

    if (!form || !successMessage || !submitBtn || !btnText) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Bloqueamos el bot√≥n para evitar doble env√≠o
      submitBtn.disabled = true;
      btnText.innerText = "Enviando...";

      const formData = new FormData(form);
      
      const { error } = await supabase.from('contactos').insert([{
        tipo_cliente: formData.get('tipo_cliente'),
        panaderia_nombre: formData.get('panaderia'),
        contacto_nombre: formData.get('nombre'),
        whatsapp: formData.get('whatsapp'),
        interes_producto: formData.get('interes'),
        mensaje: formData.get('mensaje')
      }]);

      if (!error) {
        form.classList.add('hidden');
        successMessage.classList.remove('hidden');
        form.reset();
      } else {
        console.error("Error Supabase:", error.message);
        alert("Lo sentimos, hubo un error t√©cnico. Por favor, intenta de nuevo o escr√≠benos directamente.");
      }

      // Restauramos el bot√≥n por si hay error
      submitBtn.disabled = false;
      btnText.innerText = "Enviar Solicitud";
    });

    btnReset?.addEventListener('click', () => {
      successMessage.classList.add('hidden');
      form.classList.remove('hidden');
    });
  }

  document.addEventListener('astro:page-load', setupForm);
</script>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }
  .animate-fade-in {
    animation: fade-in 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
</style>