</MainLayout>

<script>
  import { supabase } from '../lib/supabase';

  function setupForm() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const successMessage = document.getElementById('successMessage');
    const btnReset = document.getElementById('btnReset');

    if (!form || !successMessage) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      
      // Enviamos el nuevo campo 'tipo_cliente' a la base de datos
      const { error } = await supabase.from('contactos').insert([{
        tipo_cliente: formData.get('tipo_cliente'), // <--- Nuevo campo
        panaderia_nombre: formData.get('panaderia'),
        contacto_nombre: formData.get('nombre'),
        whatsapp: formData.get('whatsapp'),
        interes_producto: formData.get('interes'),
        mensaje: formData.get('mensaje')
      }]);

      if (!error) {
        form.classList.add('hidden');
        successMessage.classList.remove('hidden');
        form.reset();
      } else {
        console.error("Error en Supabase:", error.message);
        alert("Hubo un error al enviar. Por favor intenta de nuevo.");
      }
    });

    btnReset?.addEventListener('click', () => {
      successMessage.classList.add('hidden');
      form.classList.remove('hidden');
    });
  }

  document.addEventListener('astro:page-load', setupForm);
</script>