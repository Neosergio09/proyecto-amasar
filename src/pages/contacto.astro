            <select name="interes" class="w-full p-4 rounded-2xl bg-background border-none focus:ring-2 focus:ring-primary outline-none transition-all font-bold text-secondary text-sm">
              <option value="Galletas">Galletas Decoradas</option>
              <option value="Cafe">Caf√© de Origen</option>
              <option value="Chocolateria">Chocolater√≠a</option>
              <option value="Varios">Varios / Mix</option>
            </select>
          </div>

          <div>
            <label class="block text-[10px] uppercase font-black tracking-widest text-slate-400 mb-2">Detalles del pedido</label>
            <textarea name="mensaje" rows="3" placeholder="Cu√©ntanos cantidades o fecha del evento..." class="w-full p-4 rounded-2xl bg-background border-none focus:ring-2 focus:ring-primary outline-none transition-all text-sm"></textarea>
          </div>

          <button id="submitBtn" type="submit" class="w-full py-5 bg-secondary text-white rounded-2xl font-black uppercase tracking-[0.2em] text-xs hover:bg-primary transition-all shadow-xl shadow-primary/20 active:scale-95 disabled:opacity-50 disabled:cursor-not-allowed">
            <span id="btnText">Enviar Solicitud</span>
          </button>
        </form>
        
        <div id="successMessage" class="hidden text-center py-12 animate-fade-in">
          <div class="w-20 h-20 bg-green-50 text-green-500 rounded-full flex items-center justify-center text-4xl mx-auto mb-6">‚úì</div>
          <h3 class="text-3xl font-serif text-secondary mb-3">¬°Casi listo!</h3>
