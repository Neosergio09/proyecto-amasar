import VendedorLayout from '../../layouts/VendedorLayout.astro';
import { getSupabaseServer, getOptimizedImage } from '../../lib/supabase';

// 1. Inicializaci贸n y Autenticaci贸n
const supabase = await getSupabaseServer(Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

// 2. Fetch de Perfil de Usuario (Server-Side)
let perfil = { nombre: '', rol: '' };
let displayName = 'Vendedor';

if (user) {
  try {
    const { data: profileData, error: profileError } = await supabase
      .from('perfiles')
      .select('nombre, rol')
      .eq('id', user.id)
      .single();

    if (profileData) {
      perfil = profileData;
      // Fallback: Nombre de DB > Email (parte antes del @) > "Vendedor"
      displayName = profileData.nombre || user.email?.split('@')[0] || 'Vendedor';
    } else {
       displayName = user.email?.split('@')[0] || 'Vendedor';
    }
  } catch (e) {
    console.error("Error fetching profile:", e);
    displayName = user.email?.split('@')[0] || 'Vendedor';
  }
}

// 3. Consulta de Productos
const { data: rawProductos, error } = await supabase
  .from('productos')
  .select('id, nombre, precio, imagen_url, stock_cantidad, categoria')
  .order('nombre');

if (error) {
  console.error("Error cargando productos:", error);
}

// 4. Procesamiento de Productos
const productos = (rawProductos || [])
    .filter(p => p.nombre && p.precio != null)
    .map(p => ({
        ...p,
        categoria: p.categoria || 'Varios' 
    }));

const categorias = [...new Set(productos.map(p => p.categoria))].filter(Boolean).sort();
---

<VendedorLayout title="Amasar Go - Terminal">
  
  <!-- Encabezado Fijo Multinivel -->
  <header class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-md z-50 shadow-xl rounded-b-[2.5rem] px-5 py-4 transition-all duration-300">
    
    <!-- Nivel 1: Identidad -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-600 to-indigo-600 flex items-center justify-center text-white font-bold text-lg shadow-lg shadow-blue-200">
          {displayName.charAt(0).toUpperCase()}
        </div>
        <div class="flex flex-col">
          <span class="text-[10px] text-gray-500 font-bold uppercase tracking-widest">Hola,</span>
          <span class="text-gray-900 font-bold text-lg leading-none truncate max-w-[160px]">{displayName}</span>
        </div>
      </div>
      
      <button 
        id="logoutBtn"
        class="group flex items-center justify-center w-10 h-10 rounded-full bg-red-50 text-red-500 hover:bg-red-500 hover:text-white transition-all duration-300 active:scale-90"
        title="Cerrar Sesi贸n"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
      </button>
    </div>

    <!-- Nivel 2: Branding y Estado -->
    <div class="flex items-center justify-between mb-5 px-1">
      <h1 class="text-2xl font-black tracking-tighter text-gray-900">
        Amasar <span class="text-blue-600">Go</span> 
      </h1>
      <div class="flex items-center gap-1.5 px-2.5 py-1 bg-green-100/80 text-green-700 rounded-full border border-green-200 shadow-sm">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
        </span>
        <span class="text-[10px] font-bold tracking-wide">EN LNEA</span>
      </div>
    </div>

    <!-- Quick Action Toolbar -->
    <div class="grid grid-cols-2 gap-3 mb-4">
        <a href="/vendedores/clientes" class="flex items-center justify-center gap-2 bg-blue-50/50 hover:bg-blue-50 border border-blue-100 p-2.5 rounded-2xl transition-all shadow-sm active:scale-95 group">
            <span class="text-lg"></span>
            <span class="font-bold text-gray-700 text-sm group-hover:text-blue-700">Mis Clientes</span>
        </a>
        <a href="/vendedores/historial" class="flex items-center justify-center gap-2 bg-purple-50/50 hover:bg-purple-50 border border-purple-100 p-2.5 rounded-2xl transition-all shadow-sm active:scale-95 group">
            <span class="text-lg"></span>
            <span class="font-bold text-gray-700 text-sm group-hover:text-purple-700">Historial</span>
        </a>
    </div>

    <!-- Nivel 3: Buscador y Filtros -->
    <div class="space-y-3">
      <!-- Buscador -->
      <div class="relative group">
        <input 
          type="search" 
          id="searchInput" 
          placeholder="Buscar productos..." 
          class="w-full pl-11 pr-4 py-3 bg-gray-100/80 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl text-base transition-all outline-none placeholder-gray-400 shadow-inner"
        />
        <svg class="w-5 h-5 text-gray-400 absolute left-4 top-3.5 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

      <!-- Filtros -->
      <div class="flex gap-2 overflow-x-auto pb-2 no-scrollbar -mx-5 px-5 scroll-smooth">
        <button class="filter-btn active whitespace-nowrap px-5 py-2 rounded-2xl text-sm font-bold bg-gray-900 text-white shadow-lg shadow-gray-200 transition-all scale-100" data-cat="todas">
          Todas
        </button>
        {categorias.map(cat => (
          <button class="filter-btn whitespace-nowrap px-5 py-2 rounded-2xl text-sm font-bold bg-white text-gray-600 border border-gray-200 hover:bg-gray-50 hover:border-gray-300 transition-all active:scale-95 shadow-sm" data-cat={cat}>
            {cat}
          </button>
        ))}
      </div>
    </div>
  </header>

  <!-- Spacer din谩mico para compensar el header fijo (calculado para acomodar 3 niveles) -->
  <div class="h-[340px]"></div>

  <!-- Lista de Productos -->
  <main class="px-4 pb-24 space-y-4">
    {productos.map(prod => {
      const stock = prod.stock_cantidad ?? 0;
      const precio = prod.precio ?? 0;
      const sinStock = stock === 0;

      return (
        <article 
          class={`product-card flex items-center p-3 sm:p-4 bg-white rounded-[2.5rem] shadow-xl shadow-gray-100/50 border border-gray-100 transition-all duration-300 ${sinStock ? 'opacity-60 grayscale' : 'hover:-translate-y-1 hover:shadow-2xl'}`}
          data-nombre={(prod.nombre || '').toLowerCase()}
          data-cat={prod.categoria}
          data-id={prod.id}
          data-price={precio}
          data-stock={stock}
        >
          <!-- Miniatura -->
          <div class="flex-shrink-0 mr-4">
            <img 
              src={getOptimizedImage(prod.imagen_url, 200)} 
              alt={prod.nombre ?? 'Producto'} 
              class="w-20 h-20 rounded-[1.5rem] object-cover bg-slate-100 border border-gray-100 shadow-inner"
              loading="lazy"
              width="80"
              height="80"
            />
          </div>

          <!-- Info -->
          <div class="flex-1 min-w-0 pr-1">
            <h3 class="font-bold text-gray-900 text-base leading-tight mb-1 truncate">{prod.nombre ?? 'Sin nombre'}</h3>
            <div class="flex flex-wrap items-center gap-2">
              <span class="text-blue-600 font-black text-lg">${precio.toLocaleString('es-CO')}</span>
              {sinStock && <span class="text-[10px] font-bold uppercase tracking-wider text-red-500 bg-red-50 px-2 py-0.5 rounded-full border border-red-100">Agotado</span>}
            </div>
            <div class="text-xs font-medium text-gray-400 mt-1 flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
              Stock: {stock}
            </div>
          </div>

          <!-- Selector de Cantidad -->
          <div class="flex flex-col items-center gap-1 bg-gray-50 rounded-2xl p-1.5 border border-gray-100">
            <button 
              class="qty-btn w-9 h-9 flex items-center justify-center bg-white rounded-xl shadow-sm border border-gray-200 text-blue-600 active:scale-90 active:bg-blue-50 transition-all disabled:opacity-40 disabled:active:scale-100"
              data-action="increase"
              disabled={sinStock}
            >
               <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path></svg>
            </button>
            
            <span class="w-8 text-center font-bold text-gray-900 text-sm tabular-nums qty-display py-0.5">0</span>

            <button 
              class="qty-btn w-9 h-9 flex items-center justify-center bg-white rounded-xl shadow-sm border border-gray-200 text-gray-400 hover:text-red-500 active:scale-90 active:bg-red-50 transition-all disabled:opacity-40 disabled:active:scale-100"
              data-action="decrease"
              disabled
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M20 12H4"></path></svg>
            </button>
          </div>
        </article>
      );
    })}

    <!-- Estado Vac铆o -->
    <div id="emptyState" class={productos.length === 0 ? "text-center py-12" : "hidden text-center py-12"}>
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 rounded-full mb-4 text-4xl"></div>
      <p class="text-gray-500 font-medium">No se encontraron productos.</p>
    </div>
  </main>

  <!-- Barra de Resumen -->
  <div class="fixed bottom-4 left-4 right-4 z-40 pb-safe">
    <div class="bg-gray-900 text-white p-2 pl-5 rounded-[2rem] shadow-2xl shadow-gray-500/50 flex items-center justify-between border border-gray-800 max-w-md mx-auto ring-4 ring-white/20 backdrop-blur-xl">
      <div class="flex flex-col">
        <span class="text-[10px] text-gray-400 font-bold uppercase tracking-wider">Total</span>
        <span class="text-xl font-black text-white leading-none" id="totalPrice">$0</span>
      </div>
      <button 
        id="checkoutBtn"
        class="bg-blue-600 hover:bg-blue-500 text-white h-12 px-6 rounded-[1.5rem] font-bold text-base shadow-lg shadow-blue-900/50 disabled:opacity-50 disabled:shadow-none disabled:bg-gray-700 flex items-center gap-2 active:scale-95 transition-all"
        disabled
        onclick="window.location.href='/vendedores/confirmar'"
      >
        <span>Confirmar</span>
        <span class="bg-white text-blue-600 text-[10px] font-black px-1.5 py-0.5 rounded-full hidden" id="itemCountBadge">0</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
      </button>
    </div>
  </div>

<script>
    import { supabase } from '../../lib/supabase';

    document.addEventListener('DOMContentLoaded', () => {
        // --- Referencias ---
        const productList = document.querySelector('main');
        const searchInput = document.getElementById('searchInput');
        const emptyState = document.getElementById('emptyState');
        const filterBtns = document.querySelectorAll('.filter-btn');
        const totalDisplay = document.getElementById('totalPrice');
        const checkoutBtn = document.getElementById('checkoutBtn');
        const itemCountBadge = document.getElementById('itemCountBadge');
        const logoutBtn = document.getElementById('logoutBtn');
        
        // --- State ---
        const cart = new Map();
        
        // --- 0. Logout Seguro ---
        logoutBtn?.addEventListener('click', async () => {
             // Feedback visual inmediato
             logoutBtn.classList.add('opacity-50', 'pointer-events-none');
             
             try {
                // 1. Limpiar carrito local
                localStorage.removeItem('cart_backup'); 
                // 2. SignOut Supabase
                const { error } = await supabase.auth.signOut();
                if (error) throw error;
                // 3. Redirecci贸n
                window.location.href = '/admin/login';
             } catch (err) {
                console.error('Error al cerrar sesi贸n:', err);
                alert('Hubo un problema al cerrar sesi贸n. Intente nuevamente.');
                logoutBtn.classList.remove('opacity-50', 'pointer-events-none');
             }
        });

        // --- 1. Filtrado y B煤squeda ---
        
        let currentCategory = 'todas';
        let currentSearch = '';

        function filterProducts() {
            let visibleCount = 0;
            const products = document.querySelectorAll('.product-card');

            products.forEach(el => {
                const card = el as HTMLElement;
                const nombre = (card.dataset.nombre || '').toLowerCase();
                const cat = card.dataset.cat;
                
                const matchCat = currentCategory === 'todas' || cat === currentCategory;
                const matchSearch = nombre.includes(currentSearch);

                if (matchCat && matchSearch) {
                    card.style.display = 'flex';
                    // Animaci贸n de entrada suave
                    card.classList.remove('opacity-0', 'scale-95');
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                    card.classList.add('opacity-0', 'scale-95');
                }
            });
            
            if (emptyState) {
                emptyState.classList.toggle('hidden', visibleCount > 0);
            }
        }

        searchInput?.addEventListener('input', (e) => {
            currentSearch = (e.target as HTMLInputElement).value.toLowerCase();
            filterProducts();
        });

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // UI updates
                filterBtns.forEach(b => {
                   b.classList.remove('bg-gray-900', 'text-white', 'shadow-lg');
                   b.classList.add('bg-white', 'text-gray-600', 'border', 'border-gray-200');
                });
                btn.classList.remove('bg-white', 'text-gray-600', 'border', 'border-gray-200');
                btn.classList.add('bg-gray-900', 'text-white', 'shadow-lg');

                // Logic
                currentCategory = (btn as HTMLElement).dataset.cat || 'todas';
                filterProducts();
            });
        });

        // --- 2. L贸gica del Carrito ---

        function updateCartUI() {
            let total = 0;
            let count = 0;

            const products = document.querySelectorAll('.product-card');
            products.forEach(el => {
                const card = el as HTMLElement;
                const id = card.dataset.id;
                const price = parseInt(card.dataset.price || '0');
                const qty = cart.get(id) || 0;

                // Visual Feedback en Card
                const qtyDisplay = card.querySelector('.qty-display');
                if (qtyDisplay) qtyDisplay.textContent = qty.toString();
                
                // Highlight card if in cart
                if (qty > 0) {
                    card.classList.add('ring-2', 'ring-blue-100', 'bg-blue-50/30');
                } else {
                    card.classList.remove('ring-2', 'ring-blue-100', 'bg-blue-50/30');
                }

                const decreaseBtn = card.querySelector('[data-action="decrease"]');
                if (decreaseBtn) (decreaseBtn as HTMLButtonElement).disabled = (qty === 0);

                total += qty * price;
                count += qty;
            });

            // Barra Inferior
            if (totalDisplay) totalDisplay.textContent = `$${total.toLocaleString('es-CO')}`;
            if (checkoutBtn) (checkoutBtn as HTMLButtonElement).disabled = count === 0;
            
            if (itemCountBadge) {
                itemCountBadge.textContent = count.toString();
                itemCountBadge.classList.toggle('hidden', count === 0);
                
                // Animaci贸n badge
                if (count > 0) {
                    itemCountBadge.classList.remove('scale-100');
                    itemCountBadge.classList.add('scale-125');
                    setTimeout(() => itemCountBadge.classList.remove('scale-125'), 150);
                }
            }
        }

        // --- 3. Delegaci贸n de Eventos ---
        productList?.addEventListener('click', (e) => {
            const target = (e.target as Element).closest('button');
            if (!target || !target.classList.contains('qty-btn')) return;

            const card = target.closest('.product-card') as HTMLElement;
            if (!card) return;

            const id = card.dataset.id;
            const stock = parseInt(card.dataset.stock || '0');
            const action = target.dataset.action;
            
            let currentQty = cart.get(id) || 0;

            if (action === 'increase') {
                if (currentQty < stock) {
                    currentQty++;
                    // Haptic feedback visual
                    const plusIcon = target.querySelector('svg');
                    plusIcon?.classList.add('scale-125');
                    setTimeout(() => plusIcon?.classList.remove('scale-125'), 100);
                }
            } else if (action === 'decrease') {
                if (currentQty > 0) {
                    currentQty--;
                    const minusIcon = target.querySelector('svg');
                   minusIcon?.classList.add('scale-90');
                   setTimeout(() => minusIcon?.classList.remove('scale-90'), 100);
                }
            }

            cart.set(id, currentQty);
            updateCartUI();
        });
    });
</script>

<style>
    /* Utilidades */
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
    .pb-safe { padding-bottom: env(safe-area-inset-bottom, 1rem); }
    
    /* Smooth Scroll */
    html { scroll-behavior: smooth; }
</style>
</VendedorLayout>
