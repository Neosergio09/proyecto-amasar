                    class="close-modal bg-white border border-gray-200 text-gray-600 font-bold px-6 h-12 rounded-[2.5rem] hover:bg-gray-50"
                    >Cancelar</button
                >
                <button
                    type="button"
                    id="processImportBtn"
                    class="bg-indigo-600 text-white font-bold px-8 h-12 rounded-[2.5rem] hover:bg-indigo-500 shadow-lg shadow-indigo-200 disabled:opacity-50 disabled:grayscale"
                    >Importar</button
                >
            </div>
        </form>
    </dialog>
</AdminLayout>

<script>
    import { supabase } from "../../lib/supabase";

    // --- Search Logic ---
    const searchInput = document.getElementById(
        "tableSearch",
    ) as HTMLInputElement;
    const tableBody = document.getElementById("customerTableBody");

    searchInput?.addEventListener("input", (e) => {
        const term = (e.target as HTMLInputElement).value.toLowerCase();
        const rows = tableBody?.querySelectorAll("tr");
        rows?.forEach((row) => {
            const text = row.innerText.toLowerCase();
            row.style.display = text.includes(term) ? "" : "none";
        });
    });

    // --- Modal Logic ---
    const createModal = document.getElementById(
        "createModal",
    ) as HTMLDialogElement;
    const importModal = document.getElementById(
        "importModal",
    ) as HTMLDialogElement;

    // Openers
    document
        .getElementById("openCreateModal")
        ?.addEventListener("click", () => createModal?.showModal());
    document
        .getElementById("openImportModal")
        ?.addEventListener("click", () => importModal?.showModal());

    // Closers
    document.querySelectorAll(".close-modal").forEach((btn) => {
        btn.addEventListener("click", () => {
            createModal?.close();
            importModal?.close();
        });
    });

    // --- 1. Create Logic ---
    document
        .getElementById("saveNewBtn")
        ?.addEventListener("click", async (e) => {
            const btn = e.target as HTMLButtonElement;
            btn.textContent = "Guardando...";
            btn.disabled = true;

            const nombre = (
                document.getElementById("newNombre") as HTMLInputElement
            ).value;
            const contacto = (
                document.getElementById("newContacto") as HTMLInputElement
            ).value;
            const direccion = (
                document.getElementById("newDireccion") as HTMLInputElement
            ).value;
            const barrio = (
                document.getElementById("newBarrio") as HTMLInputElement
            ).value;
            const telefono = (
                document.getElementById("newTelefono") as HTMLInputElement
            ).value;
            const vendedorId =
                (document.getElementById("newVendedor") as HTMLSelectElement)
                    .value || null;

            // Strict Pre-flight Validation
            if (!nombre || !direccion || !barrio || !telefono) {
                alert(
                    "Todos los campos obligatorios (marcado con *) deben ser diligenciados:\n- Nombre\n- Dirección\n- Barrio\n- Teléfono",
                );
                btn.disabled = false;
                btn.textContent = "Guardar";
                return;
            }

            // Geolocation Helper
            const getPosition = () => {
                return new Promise<{ lat: number | null; lng: number | null }>(
                    (resolve) => {
                        if (!navigator.geolocation) {
                            resolve({ lat: null, lng: null });
                            return;
                        }
                        navigator.geolocation.getCurrentPosition(
                            (pos) => {
                                resolve({
                                    lat: pos.coords.latitude,
                                    lng: pos.coords.longitude,
                                });
                            },
                            (err) => {
                                console.warn(
                                    "Geolocation denied or error:",
                                    err,
                                );
                                resolve({ lat: null, lng: null });
                            },
                            { timeout: 5000 },
                        );
                    },
                );
            };

            const { lat, lng } = await getPosition();

            // Construct payload strictly matching schema
            const payload = {
                nombre_comercial: nombre,
                nombre_contacto: contacto,
                direccion: direccion,
                barrio: barrio,
                telefono: telefono,
                vendedor_id: vendedorId,
                latitud: lat,
                longitud: lng,
            };

            console.log("Enviando Vendedor ID:", vendedorId);
            console.log("Sending to DB:", payload);

            try {
                // 1. Insert without 'status' to let DB default handle it (avoids cache issues)
                const { error } = await supabase
                    .from("clientes")
                    .insert(payload);

                if (error) throw error;

                alert("Cliente creado exitosamente");
                window.location.reload();
            } catch (err: any) {
                console.error("Error al crear cliente:", err);

                // 3. Validation & Recovery Strategy
                // Check for common schema mismatch errors (column not found) or connection issues
                const errMsg = err.message || JSON.stringify(err);
                if (
                    errMsg.toLowerCase().includes("column") ||
                    errMsg.includes("404") ||
                    errMsg.toLowerCase().includes("does not exist")
                ) {
                    alert(
                        "Error de sincronización con la base de datos (Columna no encontrada o 404). \n\nPor favor, refresca la página e intenta nuevamente.\n\nDetalle: " +
                            errMsg,
                    );
                } else {
                    alert("Error al guardar: " + errMsg);
                }

                btn.disabled = false;
                btn.textContent = "Guardar";
            }
        });

    // --- 2. Import Logic (Simple CSV Parser) ---
    document
        .getElementById("processImportBtn")
        ?.addEventListener("click", async (e) => {
            const btn = e.target as HTMLButtonElement;
            const fileInput = document.getElementById(
                "csvFile",
            ) as HTMLInputElement;
            const sellerSelect = document.getElementById(
                "importVendedor",
            ) as HTMLSelectElement;

            if (!fileInput.files || fileInput.files.length === 0) {
                alert("Por favor selecciona un archivo CSV");
                return;
            }

            btn.textContent = "Procesando...";
            btn.disabled = true;

            const file = fileInput.files[0];
            const reader = new FileReader();

            reader.onload = async (event) => {
                const text = event.target?.result as string;
                if (!text) return;

                // 1. Sanitización Inicial (BOM + Normalización de Líneas)
                const cleanText = text
                    .replace(/^\uFEFF/, "")
                    .replace(/\r\n/g, "\n")
                    .replace(/\r/g, "\n");
                const lines = cleanText
                    .split("\n")
                    .filter((line) => line.trim().length > 0);

                if (lines.length === 0) {
                    alert("El archivo CSV está vacío.");
                    btn.disabled = false;
                    btn.textContent = "Importar";
                    return;
                }

                // 2. Detectar Delimitador (Coma vs Punto y Coma)
                const firstLine = lines[0];
                const delimiter = firstLine.includes(";") ? ";" : ",";

                // 3. Normalizar Cabeceras
                // Regla: Lowercase, Trim, Espacios -> Guiones Bajos
                const headers = firstLine.split(delimiter).map(
                    (h) =>
                        h
                            .toLowerCase()
                            .trim()
                            .replace(/\s+/g, "_")
                            .replace(/["]/g, ""), // Remove quotes from headers if present
                );

                console.log("Cabeceras detectadas:", headers);

                // 4. Validación de Columnas
                // Aceptamos 'nombre' o 'nombre_comercial'
                const hasName =
                    headers.includes("nombre") ||
                    headers.includes("nombre_comercial");

                // Optional but good to check
                const hasBarrio = headers.includes("barrio");
                const hasContacto =
                    headers.includes("contacto") ||
                    headers.includes("nombre_contacto");

                if (!hasName) {
                    console.table(headers);
                    alert(
                        "Error: No se encontró la columna 'Nombre' o 'Nombre Comercial'. Revisa la consola (F12) para ver las cabeceras detectadas.",
                    );
                    btn.disabled = false;
                    btn.textContent = "Importar";
                    return;
                }

                const rowsToInsert = [];
                const selectedSellerId = sellerSelect.value || null;
                let ignoredCount = 0;

                // 5. Procesar Filas
                for (let i = 1; i < lines.length; i++) {
                    const line = lines[i];
                    // Handle quoted values vaguely correct for simple CSVs, or just simple split
                    // For robustness with "Latam" CSVs usually simple split is enough if no internal commas/semicolons
                    const cols = line
                        .split(delimiter)
                        .map((c) => c.trim().replace(/^"|"$/g, ""));

                    const rowData: any = {
                        // status: "activo", // Removed to use DB default
                        vendedor_id: selectedSellerId,
                    };

                    let validRow = false;

                    headers.forEach((h, idx) => {
                        const val = cols[idx];
                        if (!val) return;

                        if (h === "nombre" || h === "nombre_comercial") {
                            rowData.nombre_comercial = val;
                            validRow = true;
                        } else if (h === "direccion") {
                            rowData.direccion = val;
                        } else if (h === "barrio") {
                            rowData.barrio = val; // Map explicit barrio column
                        } else if (
                            h === "contacto" ||
                            h === "nombre_contacto"
                        ) {
                            rowData.nombre_contacto = val;
                        } else if (h === "telefono" || h === "celular")
                            rowData.telefono = val;
                        else if (h === "email" || h === "correo")
                            rowData.email = val;
                    });

                    if (
                        validRow &&
                        rowData.nombre_comercial &&
                        rowData.direccion
                    ) {
                        rowsToInsert.push(rowData);
                    } else {
                        ignoredCount++;
                    }
                }

                if (rowsToInsert.length > 0) {
                    console.log("Sending Bulk to DB:", rowsToInsert);
                    try {
                        const { error } = await supabase
                            .from("clientes")
                            .insert(rowsToInsert);

                        if (error) throw error;

                        alert(
                            `Proceso Finalizado.\n\n✅ Se cargaron ${rowsToInsert.length} clientes exitosamente.\n⚠️ ${ignoredCount} registros fueron ignorados por estar incompletos (Falta Nombre o Dirección).`,
                        );
                        window.location.reload();
                    } catch (err: any) {
                        console.error("Error al importar clientes:", err);
                        const errMsg = err.message || JSON.stringify(err);

                        if (
                            errMsg.toLowerCase().includes("column") ||
                            errMsg.includes("404") ||
                            errMsg.toLowerCase().includes("does not exist")
                        ) {
                            alert(
                                "Error de sincronización con la base de datos (Columna no encontrada o 404). \n\nPor favor, refresca la página. \n\nDetalle: " +
                                    errMsg,
                            );
                        } else {
                            alert("Error de Base de Datos: " + errMsg);
                        }
                    }
                } else {
                    alert(
                        "No se pudieron extraer datos válidos. Verifica el formato del CSV.",
                    );
                }

                btn.disabled = false;
                btn.textContent = "Importar";
            };

            reader.readAsText(file);
        });

    // --- 3. Edit Logic ---
    const editModal = document.getElementById("editModal") as HTMLDialogElement;

    // Global function to attach listeners to dynamic elements if needed,
    // but here we have static elements mainly, except the rows.
    // Since rows are rendered SSR, simple querySelectorAll works.

    document.querySelectorAll(".open-edit-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
            const raw = btn.getAttribute("data-client");
            if (!raw) return;
            const client = JSON.parse(raw); // Clean parse

            // Populate Fields
            (document.getElementById("editId") as HTMLInputElement).value =
                client.id;
            (document.getElementById("editNombre") as HTMLInputElement).value =
                client.nombre_comercial;
            (
                document.getElementById("editContacto") as HTMLInputElement
            ).value = client.nombre_contacto || ""; // Handle nulls
            (
                document.getElementById("editDireccion") as HTMLInputElement
            ).value = client.direccion || "";
            (document.getElementById("editBarrio") as HTMLInputElement).value =
                client.barrio || "";
            (
                document.getElementById("editTelefono") as HTMLInputElement
            ).value = client.telefono || "";
            (
                document.getElementById("editVendedor") as HTMLSelectElement
            ).value = client.vendedor_id || "";
            (document.getElementById("editStatus") as HTMLSelectElement).value =
                client.status || "activo";

            console.log("Cargando datos en modal:", client);
            console.log("Edit Open. Client Vendedor:", client.vendedor_id);
            editModal.showModal();
        });
    });

    document
        .getElementById("saveEditBtn")
        ?.addEventListener("click", async (e) => {
            const btn = e.target as HTMLButtonElement;
            const originalText = btn.textContent;
            btn.textContent = "Actualizando...";
            btn.disabled = true;

            const id = (document.getElementById("editId") as HTMLInputElement)
                .value;
            const nombre = (
                document.getElementById("editNombre") as HTMLInputElement
            ).value;
            const contacto = (
                document.getElementById("editContacto") as HTMLInputElement
            ).value;
            const direccion = (
                document.getElementById("editDireccion") as HTMLInputElement
            ).value;
            const barrio = (
                document.getElementById("editBarrio") as HTMLInputElement
            ).value;
            const telefono = (
                document.getElementById("editTelefono") as HTMLInputElement
            ).value;
            const vendedorId =
                (document.getElementById("editVendedor") as HTMLSelectElement)
                    .value || null;
            const status = (
                document.getElementById("editStatus") as HTMLSelectElement
            ).value;

            // DEBUG: Trace Payload
            console.log("--- SUBMITTING EDIT ---");
            console.log("Client ID:", id);
            console.log("Enviando Vendedor ID:", vendedorId);
            console.log("Status:", status);

            try {
                const payloadUpdate = {
                    nombre_comercial: nombre,
                    nombre_contacto: contacto,
                    direccion: direccion,
                    barrio: barrio,
                    telefono: telefono,
                    vendedor_id: vendedorId,
                    status: status,
                };

                console.log("Payload de actualización:", payloadUpdate);

                const { data, error } = await supabase
                    .from("clientes")
                    .update(payloadUpdate)
                    .eq("id", id)
                    .select();

                console.log("Respuesta Supabase:", { data, error });

                if (error) throw error;

                alert("Cliente actualizado correctamente");
                window.location.reload();
            } catch (err: any) {
                console.error("Error updating client:", err);
                alert("Error al actualizar: " + err.message);
                btn.textContent = originalText;
                btn.disabled = false;
            }
        });

    // --- 4. Quick Status Toggle Logic ---
    document.querySelectorAll(".status-toggle").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
            e.stopPropagation(); // Avoid triggering row click if any

            const button = btn as HTMLButtonElement;
            const id = button.dataset.id;
            const currentStatus = button.dataset.current;
            const newStatus =
                currentStatus === "activo" ? "inactivo" : "activo"; // Toggle

            // Optimistic UI Update (optional, but good for UX)
            // But doing a reload is safer to reflect all changes (opacity etc).
            // For now, let's do direct update.

            if (!confirm(`¿Cambiar estado a ${newStatus.toUpperCase()}?`))
                return;

            try {
                const { error } = await supabase
                    .from("clientes")
                    .update({ status: newStatus })
                    .eq("id", id);

                if (error) throw error;

                window.location.reload();
            } catch (err: any) {
                alert("Error cambiando estado: " + err.message);
            }
        });
    });
</script>

