---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getSupabaseServer } from "../../lib/supabase";

// 1. Auth & Server Logic
const supabase = await getSupabaseServer(Astro.cookies);
const {
    data: { user },
} = await supabase.auth.getUser();

if (!user) return Astro.redirect("/admin/login");

// 2. Fetch Initial Data (Clientes & Vendedores for assignment)
const { data: clientes } = await supabase
    .from("clientes")
    .select(
        "id, nombre_comercial, nombre_contacto, barrio, direccion, telefono, status, vendedor_id, ultima_compra_at",
    )
    .order("nombre_comercial", { ascending: true });

const { data: vendedores, error: sellerError } = await supabase
    .from("perfiles") // Correct table name per user instruction
    .select("id, nombre")
    .order("nombre", { ascending: true });

if (sellerError) {
    console.error("Error fetching vendedores:", sellerError);
} else {
    console.log("Total de perfiles encontrados:", vendedores?.length);
}

const clientList = clientes || [];
const sellerList = vendedores || [];
