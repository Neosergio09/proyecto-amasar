---

<AdminLayout title="Crear Producto">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <div class="mb-8 flex items-center gap-4">
            <a
                href="/admin/productos"
                class="w-10 h-10 flex items-center justify-center rounded-xl bg-white border border-gray-200 text-slate-500 hover:text-primary hover:border-primary transition-all shadow-sm"
                aria-label="Volver a productos"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
            </a>
            <div>
                <h1 class="text-3xl font-serif text-secondary mb-1">
                    Nuevo Producto
                </h1>
                <p class="text-slate-500 text-sm">
                    Completa la información para agregar un producto al
                    inventario.
                </p>
            </div>
        </div>

        <!-- Form Container -->
        <div class="bg-white rounded-3xl shadow-sm border border-gray-100 p-8">
            <form id="createProductForm" class="space-y-6">
                <!-- Nombre -->
                <div class="space-y-2">
                    <label for="nombre" class="text-sm font-bold text-slate-700"
                        >Nombre del Producto <span class="text-red-500">*</span
                        ></label
                    >
                    <input
                        type="text"
                        id="nombre"
                        name="nombre"
                        required
                        class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-primary focus:bg-white focus:ring-4 focus:ring-primary/10 transition-all outline-none text-slate-700"
                        placeholder="Ej: Galletas de Avena y Miel"
                        aria-label="Nombre del Producto"
                    />
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Categoría -->
                    <div class="space-y-2">
                        <label
                            for="categoria"
                            class="text-sm font-bold text-slate-700"
                            >Categoría <span class="text-red-500">*</span
                            ></label
                        >
                        <div class="relative">
                            <select
                                id="categoria"
                                name="categoria"
                                required
                                class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-primary focus:bg-white focus:ring-4 focus:ring-primary/10 transition-all outline-none text-slate-700 appearance-none cursor-pointer"
                                aria-label="Categoría del Producto"
                            >
                                <option value="" disabled selected
                                    >Selecciona una opción...</option
                                >
                                <option value="Galletas">Galletas</option>
                                <option value="Café">Café</option>
                                <option value="Chocolatería"
                                    >Chocolatería</option
                                >
                                <option value="Jugos">Jugos</option>
                                <option value="Gelatina">Gelatina</option>
                            </select>
                            <div
                                class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <!-- Precio -->
                    <div class="space-y-2">
                        <label
                            for="precio"
                            class="text-sm font-bold text-slate-700"
                            >Precio <span class="text-red-500">*</span></label
                        >
                        <div class="relative">
                            <span
                                class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 font-bold"
                                >$</span
                            >
                            <input
                                type="number"
                                id="precio"
                                name="precio"
                                min="0"
                                step="0.01"
                                required
                                class="w-full pl-8 pr-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-primary focus:bg-white focus:ring-4 focus:ring-primary/10 transition-all outline-none text-slate-700 placeholder-slate-400"
                                placeholder="0.00"
                                aria-label="Precio del Producto"
                            />
                        </div>
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Stock -->
                    <div class="space-y-2">
                        <label
                            for="stock_cantidad"
                            class="text-sm font-bold text-slate-700"
                            >Stock Inicial <span class="text-red-500">*</span
                            ></label
                        >
                        <input
                            type="number"
                            id="stock_cantidad"
                            name="stock_cantidad"
                            min="0"
                            required
                            class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-primary focus:bg-white focus:ring-4 focus:ring-primary/10 transition-all outline-none text-slate-700"
                            placeholder="0"
                            aria-label="Cantidad de Stock Inicial"
                        />
                    </div>

                    <!-- Image URL -->
                    <!-- Image Upload -->
                    <div class="space-y-2">
                        <label class="text-sm font-bold text-slate-700"
                            >Imagen del Producto</label
                        >

                        <!-- File Input styled as button/zone -->
                        <div class="relative">
                            <input
                                type="file"
                                id="imagen_file"
                                accept="image/*"
                                class="hidden"
                            />
                            <label
                                for="imagen_file"
                                class="flex flex-col items-center justify-center w-full h-32 border-2 border-dashed border-gray-300 rounded-xl cursor-pointer hover:bg-gray-50 hover:border-primary/50 transition-colors"
                            >
                                <div
                                    class="flex flex-col items-center justify-center pt-5 pb-6"
                                >
                                    <svg
                                        class="w-8 h-8 mb-3 text-gray-400"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        xmlns="http://www.w3.org/2000/svg"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                                        ></path></svg
                                    >
                                    <p class="mb-2 text-sm text-gray-500">
                                        <span class="font-bold"
                                            >Haz clic para subir</span
                                        >
                                    </p>
                                    <p class="text-xs text-gray-400">
                                        WebP, PNG, JPG (Máx. 800px)
                                    </p>
                                </div>
                            </label>
                        </div>

                        <!-- Preview Container -->
                        <div
                            id="previewContainer"
                            class="hidden mt-4 relative w-32 h-32 rounded-xl overflow-hidden border border-gray-200 shadow-sm group"
                        >
                            <img
                                id="imagePreview"
                                src=""
                                alt="Vista previa"
                                class="w-full h-full object-cover"
                            />
                            <button
                                type="button"
                                id="removeImageBtn"
                                class="absolute top-1 right-1 bg-red-500 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity"
                                title="Eliminar imagen"
                            >
                                <svg
                                    class="w-4 h-4"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12"></path></svg
                                >
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="space-y-2">
                    <label
                        for="descripcion"
                        class="text-sm font-bold text-slate-700"
                        >Descripción</label
                    >
                    <textarea
                        id="descripcion"
                        name="descripcion"
                        rows="4"
                        class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-primary focus:bg-white focus:ring-4 focus:ring-primary/10 transition-all outline-none text-slate-700 resize-none"
                        placeholder="Detalles del producto..."
                        aria-label="Descripción del Producto"></textarea>
                </div>

                <!-- Actions -->
                <div class="pt-4 flex items-center justify-end gap-4">
                    <a
                        href="/admin/productos"
                        class="px-6 py-3 rounded-xl text-slate-500 font-bold hover:bg-gray-50 transition-colors"
                    >
                        Cancelar
                    </a>
                    <button
                        type="submit"
                        id="submitBtn"
                        class="bg-primary text-white font-bold px-8 py-3 rounded-xl shadow-lg shadow-primary/20 hover:bg-orange-600 transition-all active:scale-95 flex items-center gap-2"
                    >
                        <span>Guardar Producto</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-5 h-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                    </button>
                </div>
            </form>
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../../lib/supabase";
    import imageCompression from "browser-image-compression";

    const form = document.getElementById(
        "createProductForm",
    ) as HTMLFormElement;
    const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
    const imageInput = document.getElementById(
        "imagen_file",
    ) as HTMLInputElement;
    const imagePreview = document.getElementById(
        "imagePreview",
    ) as HTMLImageElement;
    const previewContainer = document.getElementById("previewContainer");
    const removeImageBtn = document.getElementById("removeImageBtn");

    let compressedImageFile: File | null = null;

    // 1. Image Selection & Preview Logic
    imageInput?.addEventListener("change", async (event) => {
        const input = event.target as HTMLInputElement;
        if (input.files && input.files[0]) {
            const file = input.files[0];

            try {
                // Options for compression
                const options = {
                    maxSizeMB: 1,
                    maxWidthOrHeight: 800,
                    useWebWorker: true,
                    fileType: "image/webp",
                };

                // Show loading state in preview? Optional

                // Compress
                compressedImageFile = await imageCompression(file, options);

                // Preview
                const reader = new FileReader();
                reader.onload = (e) => {
                    if (imagePreview && e.target?.result) {
                        imagePreview.src = e.target.result as string;
                        previewContainer?.classList.remove("hidden");
                    }
                };
                reader.readAsDataURL(compressedImageFile);
            } catch (error) {
                console.error("Error compressing image:", error);
                alert("Error al procesar la imagen.");
            }
        }
    });

    // 2. Remove Image Logic
    removeImageBtn?.addEventListener("click", () => {
        if (imageInput) imageInput.value = "";
        if (imagePreview) imagePreview.src = "";
        previewContainer?.classList.add("hidden");
        compressedImageFile = null;
    });

    // 3. Form Submission
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        if (!submitBtn) return;

        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = `<span class="animate-spin inline-block w-5 h-5 border-2 border-white/30 border-t-white rounded-full"></span> Guardando...`;
        submitBtn.classList.add("opacity-75", "cursor-wait");

        try {
            const formData = new FormData(form);
            const nombre = formData.get("nombre") as string;
            const categoria = formData.get("categoria") as string;
            const precio = parseFloat(formData.get("precio") as string);
            const stock_cantidad = parseInt(
                formData.get("stock_cantidad") as string,
            );
            const descripcion = formData.get("descripcion") as string;
            // imagen_file is handled separately

            if (
                !nombre ||
                !categoria ||
                isNaN(precio) ||
                isNaN(stock_cantidad)
            ) {
                throw new Error("Por favor completa los campos obligatorios.");
            }

            // A. Check Auth
            const {
                data: { session },
            } = await supabase.auth.getSession();
            if (!session) throw new Error("Tu sesión ha expirado.");

            // B. Upload Image (if exists)
            let finalImageUrl = null;
            if (compressedImageFile) {
                const fileName = `product-${Date.now()}-${Math.floor(Math.random() * 1000)}.webp`;
                const { data: uploadData, error: uploadError } =
                    await supabase.storage
                        .from("productos")
                        .upload(fileName, compressedImageFile, {
                            cacheControl: "3600",
                            upsert: false,
                        });

                if (uploadError) throw uploadError;

                const {
                    data: { publicUrl },
                } = supabase.storage.from("productos").getPublicUrl(fileName);

                finalImageUrl = publicUrl;
            }

            // C. Insert Product
            const { error } = await supabase.from("productos").insert([
                {
                    nombre,
                    categoria,
                    precio,
                    stock_cantidad,
                    imagen_url: finalImageUrl,
                    descripcion: descripcion || null,
                },
            ]);

            if (error) throw error;

            window.location.href = "/admin/productos?success=true";
        } catch (err: any) {
            console.error("Error creating product:", err);
            alert(err.message || "Ocurrió un error al guardar el producto.");
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
            submitBtn.classList.remove("opacity-75", "cursor-wait");
        }
    });
</script>
